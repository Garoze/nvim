{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_flags.txt",
                "compile_commands.json"
            ],
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ]
        },
        "lua": {
            "command": "lua-lsp",
            "filetypes": [
                "lua"
            ]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "json",
        "python"
    ],
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "~/.config/nvim/complete/"
    ]
}
